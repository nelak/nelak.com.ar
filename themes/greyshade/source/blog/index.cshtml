@{
    Layout = "default";
    Title = "Blog Archives";
    Description = "A blog aware static site generator in mostly F#";
}
@helper PostDate(DateTime rawDate)
{
    <time datetime="@rawDate.ToString("yyyy'-'MM'-'dd'T'HH':'mm':'ss")" itemprop="datePublished">@rawDate.ToString("MMM d, yyyy")</time>
}
@using System.Linq

<article class="page">
    
    <h1 class="title">Blog Archives</h1>
    
    <div class="entry-content">
    <div class="archives" itemscope itemtype="http://schema.org/Blog">
	<h2 class="year">2013</h2>
	<ul>
	@foreach (var post in Enumerable.Take(Model.Posts, 10))
	{
		<li>
		<h3 class="title"><a href="@post.Url/index.html">@post.Title</a></h3>
		<div class="meta">
			<span class="date">@PostDate(post.Date)</span>
			<br>
			<span class="tags">@string.Join(",", post.Tags)</span>
		    	<span class="comments"><a href="@post.Url/index.html#disqus_thread">Comments</a></span>
		</div>
		</li>
	}
	</ul>
</div>
</div>
</article>